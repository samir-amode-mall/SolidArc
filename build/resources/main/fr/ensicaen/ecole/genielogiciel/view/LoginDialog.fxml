<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane prefWidth="401.0" styleClass="dialog" stylesheets="@LoginDialog.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.ensicaen.ecole.genielogiciel.view.LoginView">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="50.0" vgrow="NEVER" />
        <RowConstraints minHeight="50.0" prefHeight="30.0" vgrow="NEVER" />
        <RowConstraints minHeight="50.0" prefHeight="30.0" vgrow="NEVER" />
      <RowConstraints minHeight="50.0" prefHeight="30.0" vgrow="NEVER" />
    </rowConstraints>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
   <Label prefHeight="35.0" prefWidth="179.0" styleClass="text" text="SolidArc" textAlignment="CENTER" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="0">
      <font>
         <Font name="Britannic Bold" size="34.0" />
      </font>
   </Label>
    <Label alignment="CENTER" prefHeight="16.0" prefWidth="160.0" styleClass="text" text="%login.message.text" GridPane.rowIndex="1" />
    <TextField fx:id="_nickName" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
    <Button defaultButton="true" onAction="#launchGameClassic" prefHeight="26.0" prefWidth="124.0" styleClass="button" text="%launchClassic.button.text" GridPane.columnSpan="1" GridPane.halignment="CENTER" GridPane.rowIndex="2" />
    <Button defaultButton="true" onAction="#launchGameBalloon" prefHeight="26.0" prefWidth="124.0" styleClass="button" text="%launchBalloon.button.text" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="2" />
    <Label fx:id="_errorLabel" textFill="#ef0000" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.hgrow="ALWAYS" GridPane.rowIndex="3" />
</GridPane>
